rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      // In a real app, this would be more secure, e.g., checking a custom claim.
      // For now, we'll assume a specific UID is the admin for simplicity.
      // Or check a 'roles' collection. For this demo, anyone can be an admin.
      return isSignedIn();
    }

    function isStaff() {
      // For now, we will treat any signed-in user as staff for simplicity.
      return isSignedIn();
    }

    function isStaffOrAdmin() {
      return isStaff() || isAdmin();
    }

    match /clients/{clientId} {
      allow read, write: if isOwner(clientId) || isStaffOrAdmin();
      allow list: if isStaffOrAdmin();
    }

    match /rooms/{roomId} {
      allow read: if isSignedIn();
      allow list: if isSignedIn();
      allow write: if request.auth != null;
    }

    match /reservations/{reservationId} {
      allow get: if isStaffOrAdmin() || (isSignedIn() && resource.data.clientId == request.auth.uid);
      allow list: if isStaffOrAdmin();
      allow create: if isSignedIn();
      allow update, delete: if isStaffOrAdmin() || (isSignedIn() && resource.data.clientId == request.auth.uid);
    }

    match /staff/{staffId} {
      allow read, list: if isStaffOrAdmin();
      allow write: if isAdmin();
    }

    match /roles_admin/{uid} {
      allow read, write: if isAdmin();
    }

    match /roles_staff/{uid} {
      allow read, write: if isAdmin();
    }
  }
}
